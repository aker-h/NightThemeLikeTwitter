{
    "name": "NightThemeLikeTwitter",
    "version": "1.0",
    "manifest_version": 3,
    "description": "TwitterのナイトモードをGoogleなどにも適用。",

    "icons": {},

    "permissions": [],    

    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "css": [
            "content_scripts/root.css"
        ]
    },{
        "matches": [
            "https://*.google.com/*",
            "https://*.google.co.jp/*"
        ],
        "js":[
            "js/jquery-3.6.0.min.js",
            "js/enums.js",
            "js/lib.js",
            "content_scripts/google/commonLib.js",
            "content_scripts/google/commonOnload.js"
        ],
        "css": [     
            "content_scripts/google/common.css"
        ],
        "all_frames": true
    },{
        "matches": [
            "https://*.google.com/imghp*",
            "https://*.google.co.jp/imghp*"
        ],
        "js":[],
        "css": [            
            "content_scripts/root.css",
            "content_scripts/google/searchImage.css"
        ]
    }],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },

    "web_accessible_resources": [{
        "resources": ["img/*.png"],
        "matches": ["<all_urls>"]
    }]
}