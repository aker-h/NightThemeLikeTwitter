{
    "name": "NightThemeLikeTwitter",
    "version": "1.0",
    "manifest_version": 3,
    "description": "TwitterのナイトモードをGoogleなどにも適用。",

    "icons": {},

    "permissions": [],    

    "content_scripts": [{
        "matches": [
            "https://www.google.com/*",
            "https://www.google.co.jp/*"
        ],
        "exclude_matches":[],
        "js":[
            "js/jquery-3.6.0.min.js",
            "js/enums.js",
            "js/lib.js",
            "content_scripts/google/commonLib.js",
            "content_scripts/google/commonOnload.js"
        ],
        "css": [
            "content_scripts/root.css",
            "content_scripts/google/common.css",
            "content_scripts/google/search.css",
            "content_scripts/google/preferences.css"
        ],
        "all_frames": true
    },{
        "matches": [
            "https://outlook.office365.com/mail/*",
            "https://outlook.office.com/mail/*"
        ],
        "js": [
            "js/jquery-3.6.0.min.js",
            "js/enums.js",
            "js/lib.js",
            "content_scripts/outlook/outlookLib.js",
            "content_scripts/outlook/outlookOnload.js"
        ],
        "css": [
            "content_scripts/root.css",
            "content_scripts/outlook/common.css"
        ]
    }],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },

    "web_accessible_resources": [{
        "resources": [
            "*.png",
            "*.css"
        ],
        "matches": ["<all_urls>"]
    }]
}